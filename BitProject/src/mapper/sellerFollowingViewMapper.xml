<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.ISellerFollowingViewDao">
	
	<select id="selectSellerFollowingView" parameterType="int" resultType="seller_following_view">
		select * from seller_following_view where m_index=#{m_index};
	</select>
	
	<select id="selectAllSellerFollowingView" parameterType="int" resultType="seller_following_view">
		select * from seller_following_view where s_index=#{s_index};
	</select>
	
	<select id="selectCountSellerFollowingView" parameterType="int" resultType="int">
		select count(*) from seller_following_view where s_index=#{s_index};
	</select>
	
</mapper>